# inventory_MIS_nginx.conf

# the upstream component nginx needs to connect to
 upstream django {
       #  server unix:///home/djangoProject/project2/inventory_MIS/tmp/uwsgi.sock; # for a file socket
         server 127.0.0.1:8008; # for a web port socket (we'll use this first)#
         }

# configuration of the server
server {
        # the port your site will be served on
        listen      8000;
        # the domain name it will serve for
        server_name 10.0.8.11; # substitute your machine's IP address or FQDN
        server_name dorabot.inventory.com; # substitute your machine's IP address or FQDN
                    
        charset     utf-8;

        # max upload size
        client_max_body_size 75M;   # adjust to taste

        # Django media
        location /media  {      
            alias /home/dorabot/djangoProject/project2/inventory_MIS/media;  # your Django project's media files 
                }

        location /static {
                    alias /home/dorabot/djangoProject/project2/inventory_MIS/static; # your Django project's static files 
                }

        # Finally, send all non-media requests to the Django server.
        location / { 
                    include    uwsgi_params; # the uwsgi_params file you installed
                    uwsgi_pass  django;    
            }

        access_log /var/log/nginx/inventory_aceess.log;
        error_log /var/log/nginx/inventory_error.log;
}
